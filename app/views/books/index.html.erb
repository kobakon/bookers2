<div class="container px-5 px-sm-0">
      <!--バリテーション-->
    <% if @book.errors.any? %>
      <h3><%= @book.errors.count %>
      errors prohibited this obj from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    <% end %>
  <div class="row">

    <div class="col-md-3">

      <!--ユーザーインフォ-->
      <%= render 'users/userinfo', user: current_user, book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <% if current_user != @book.user %>
        <%= render 'index', books: @books, book: @book %>
      <% end %>
    </div>
  </div>
</div>