<div class= "container px-5 px-sm-0">
  <div class="row">
    <dic class="col-md-3">
      <!--テンプレート-->
      <%= render 'userinfo', user: @user, book: @book %>
    </dic>
      <!--ユーザー一覧-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(100,100) %></p>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to 'Show', user_path(user.id) %>
              
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>